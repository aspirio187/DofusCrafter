<ContentControl 
    x:Class="DofusCrafter.UI.Views.RegisterSaleView"
    xmlns:locator="clr-namespace:DofusCrafter.UI.Locators"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:DofusCrafter.UI.Views"
    locator:ViewModelLocator.AutoConnectedViewModelProperty="True"
    mc:Ignorable="d"
    d:DesignWidth="500">
    <Grid Background="White">
        <StackPanel>
            <DockPanel LastChildFill="True">
                <Label 
                    Content="Ressource / Équipement vendu" 
                    Margin="5" 
                    Width="180"/>
                <ComboBox
                    IsEditable="True"
                    Text="{Binding SoldItem.Name, NotifyOnTargetUpdated=True}"
                    Margin="5"
                    ItemsSource="{Binding Items}"/>
            </DockPanel>

            <DockPanel LastChildFill="True">
                <Label 
                    Content="Quantité vendu"
                    Margin="5"
                    Width="180"/>
                <TextBox 
                    Text="{Binding SoldItem.Quantity}"
                    Margin="5" />
            </DockPanel>

            <DockPanel LastChildFill="True">
                <Label
                    Content="Date de la vente"
                    Margin="5"
                    Width="180" />

                <DatePicker 
                    SelectedDate="{Binding SoldItem.SaleDate}" 
                    Margin="5" />
            </DockPanel>

            <DockPanel LastChildFill="True">
                <Image
                    HorizontalAlignment="Left"
                    Margin="5"
                    Source="{Binding Item.Image}"
                    Width="50"
                    Height="50" />

                <StackPanel>
                    <Button 
                    Content="Enregistrer la vente"
                    Command="{Binding SaveSaleCommand}"
                    Margin="5" />
                    <Button
                    Content="Annuler"
                    Command="{Binding CancelSaleCommand}"
                    Margin="5" />
                </StackPanel>
            </DockPanel>

        </StackPanel>
    </Grid>
</ContentControl>
